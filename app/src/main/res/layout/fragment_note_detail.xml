<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.telefonica.talentum.noteapp.NoteDetailFragment"
    android:background="#819FF7"
    android:padding="5dp"
    >
    <EditText
        android:id="@+id/fragment_note_detail_title_text"
        android:hint="Enter note title"
        android:background="#5858FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_below="@id/fragment_note_detail_title_text"
        android:id="@+id/fragment_note_detail_description_text"
        android:hint="Enter note description"
        android:background="#0040FF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
