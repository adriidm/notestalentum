<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.telefonica.talentum.noteapp.NoteDetailFragment"
    android:background="@android:color/holo_orange_dark"
    android:padding="5dp"
    >

    <EditText
        android:id="@+id/fragment_note_detail_title_text"
        android:hint="Enter note title"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_below="@id/fragment_note_detail_title_text"
        android:id="@+id/fragment_note_detail_description_text"
        android:hint="Enter note description"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="10dp"
        />

    

</RelativeLayout>
